<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pl_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lyz.dewordhelper.PlTrainingActivity">


    <TextView
        android:text="Chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:layout_alignParentStart="true"
        android:id="@+id/fy"
        android:textSize="30sp" />

    <TextView
        android:text="gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pl"
        android:textSize="40sp"
        android:layout_above="@+id/fy"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:id="@+id/word"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="onPlAClick"
            android:id="@+id/pl_no"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="..-"
            android:layout_weight="1"
            android:id="@+id/pl_um"
            android:onClick="onPlAClick"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-e"
            android:layout_weight="1"
            android:onClick="onPlAClick"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/pl_e"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-..e"
            android:layout_weight="1"
            android:onClick="onPlAClick"
            android:background="@android:color/darker_gray"
            android:id="@+id/pl_um_e"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-er"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:onClick="onPlAClick"
                android:id="@+id/pl_er"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-..er"
                android:layout_weight="1"
                android:id="@+id/pl_um_er"
                android:onClick="onPlAClick"
                android:background="@android:color/darker_gray"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-n"
                android:layout_weight="1"
                android:onClick="onPlAClick"
                android:background="@android:color/holo_red_dark"
                android:id="@+id/pl_n"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-en"
                android:layout_weight="1"
                android:onClick="onPlAClick"
                android:background="@android:color/darker_gray"
                android:id="@+id/pl_en"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-s"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:onClick="onPlAClick"
                android:id="@+id/pl_s" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-s"
                android:layout_weight="1"
                android:id="@+id/pl_s2"
                android:onClick="onPlAClick"
                android:background="@android:color/darker_gray"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-s"
                android:layout_weight="1"
                android:onClick="onPlAClick"
                android:background="@android:color/holo_red_dark"
                android:id="@+id/pl_s3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-s"
                android:layout_weight="1"
                android:onClick="onPlAClick"
                android:background="@android:color/darker_gray"
                android:id="@+id/pl_s4"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
