<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyz.dewordhelper.LanguageSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <include layout="@layout/widget_toolbar"
            android:id="@+id/toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择您希望学习的语言："
            android:textSize="30sp"
            android:id="@+id/remind"
            />
        <RadioGroup
            android:id="@+id/languageGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="德语"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40sp"
                android:id="@+id/German"
                android:checked="true" />

            <RadioButton
                android:text="法语"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40sp"
                android:id="@+id/French" />

            <RadioButton
                android:text="西班牙语"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40sp"
                android:id="@+id/Spanish" />

            <RadioButton
                android:text="葡萄牙语"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="40sp"
                android:id="@+id/Portuguese" />
        </RadioGroup>

        <!--<TextView
            android:id="@+id/decision"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:layout_weight="0.70" />-->


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:background="#00695c"
        android:onClick="onEnsureClick"
        android:id="@+id/sure"/>
</RelativeLayout>
