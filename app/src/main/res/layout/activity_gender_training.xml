<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gender_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lyz.dewordhelper.GenderTrainingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/option_der"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="onGenderAClick"
            android:id="@+id/der"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/option_das"
            android:layout_weight="1"
            android:id="@+id/das"
            android:onClick="onGenderAClick"
            android:background="@android:color/darker_gray"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/option_die"
            android:layout_weight="1"
            android:onClick="onGenderAClick"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/die"/>
    </LinearLayout>

    <TextView
        android:text="word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:id="@+id/word"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/word"
        android:id="@+id/pl"
        android:textSize="40sp" />

    <TextView
        android:text="Chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pl"
        android:layout_alignParentStart="true"
        android:id="@+id/chn"
        android:textSize="30sp" />

</RelativeLayout>
