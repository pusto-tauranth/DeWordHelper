<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/dialog_training">
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_training_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#f2debd"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/dialog_training_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="nothing"
        android:textColor="#EEEE00"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/dialog_training_chn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="nothing"
        android:textColor="#b8f1ed"
        android:textSize="30sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="15dp"
        android:background="#E4E4E4"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_training_next"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:gravity="center"
        android:singleLine="true"
        android:text="NÃ¤chst"
        android:textColor="#ffffff"
        android:textSize="16sp"
        />
</LinearLayout>

</RelativeLayout>
